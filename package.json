		"should": "^13.2.3",
		"source-map-support": "^0.5.16",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.6.2",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^3.7.4",
		"webpack": "^4.42.0",
		"webpack-bundle-analyzer": "^3.6.0",
		"webpack-cli": "^3.3.11",
		"webpack-merge": "^4.2.2"
